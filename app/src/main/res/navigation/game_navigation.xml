<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_navigation"
    app:startDestination="@id/itemHome">

    <fragment
        android:id="@+id/itemHome"
        android:name="com.example.adv160420066w2.MainFragment"
        android:label="MainScreen"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/actionGameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.adv160420066w2.GameFragment"
        android:label="GameScreen"
        tools:layout="@layout/fragment_game">
        <argument
            android:name="player_name"
            app:argType="string" />
        <action
            android:id="@+id/actionResult"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/actionTestFragment"
            app:destination="@id/tesFragment"
            app:popUpTo="@id/tesFragment" />
        <action
            android:id="@+id/action_gameFragment_to_mainFragment"
            app:destination="@id/itemHome" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.adv160420066w2.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/actionMain"
            app:destination="@id/itemHome" />
        <argument
            android:name="score"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/tesFragment"
        android:name="com.example.adv160420066w2.TesFragment"
        android:label="fragment_tes"
        tools:layout="@layout/fragment_tes" />
    <fragment
        android:id="@+id/itemHistory"
        android:name="com.example.adv160420066w2.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/itemProfile"
        android:name="com.example.adv160420066w2.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>